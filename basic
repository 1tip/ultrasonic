// srt04-mode0

#define TRIGPIN 9
#define ECHOPIN 10

uint32_t duration, distance;
//int result;
uint32_t result;

void setup() {
  Serial.begin(115200);
  pinMode(ECHOPIN, INPUT);
  pinMode(TRIGPIN, OUTPUT);
}

void loop() {
  digitalWrite(TRIGPIN, LOW);
  delayMicroseconds(2);

  digitalWrite(TRIGPIN, HIGH);
  //delayMicroseconds(10); // originally
  delayMicroseconds(250);   // 수정

  digitalWrite(TRIGPIN, LOW);

  duration = pulseIn(ECHOPIN, HIGH);
  if (duration > 52000) duration = 0;

  distance = (duration / 2) * 0.0343;
  result = round(distance) + 2; //calibration and round to cm

  Serial.print("distance: ");
  Serial.print(result);
  Serial.println(" cm");

  delay(300);
}
